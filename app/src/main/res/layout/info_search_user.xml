<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/infoRoomLayout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@android:color/white"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/view2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="0.2"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        tools:cardElevation="0dp">

        <ImageView
            android:id="@+id/infoUserPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/photo"
            android:scaleType="fitXY"
            android:src="@drawable/ic_account_circle_black_24dp"
            app:srcCompat="@drawable/ic_account_circle_black_24dp" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/infoUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/view2"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="2dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="Name" />

    <LinearLayout
        android:id="@+id/infoCurrentRoomView"
        android:layout_width="220dp"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/view2"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/view2"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageCurrentRoom"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view2"
            android:layout_marginEnd="-84dp"
            android:layout_toStartOf="@+id/infoCurrentRoom"
            app:srcCompat="@drawable/megaphone" />

        <TextView
            android:id="@+id/infoCurrentRoomText"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="85dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:paddingRight="10dp"
            android:textColor="@color/warm_grey"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:text="Pour ou contre  la choucroute?" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/joinButton"
            style="@style/AppTheme.coloredButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/infoCurrentRoom"
            android:text="@string/join"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/chatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:padding="10dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@android:drawable/stat_notify_chat"
        android:tint="@color/PolyvoxMainColor"
        android:visibility="gone" />


</RelativeLayout>