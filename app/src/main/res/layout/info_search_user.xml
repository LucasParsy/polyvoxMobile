<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/infoRoomLayout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@android:color/white"
    android:padding="10dp">

    <FrameLayout
        android:id="@+id/room_search_image_frame"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true">

        <android.support.v7.widget.CardView
            android:id="@+id/view2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="0.2"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            tools:cardElevation="0dp">

            <ImageView
                android:id="@+id/infoUserPicture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_account_circle_black_24dp"
                app:srcCompat="@drawable/ic_account_circle_black_24dp" />

        </android.support.v7.widget.CardView>

        <!--android:transitionName="videoTransition"-->

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/room_search_viewers_layout"
        android:layout_toRightOf="@+id/room_search_image_frame"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/infoUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Name" />

    </LinearLayout>


</RelativeLayout>