<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoStart="true"
            android:flipInterval="2">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="262dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="25dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_logo_carrey" />

                    <TextView
                        android:id="@+id/textView"
                        style="@style/AppTheme.ColoredButton.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"
                        android:gravity="center_horizontal"
                        android:text="CA RESTERA TOUJOURS MOCHE SANS DESIGNER.          DESENGAGEZ,DESENGAGEZ!"
                        android:textStyle="bold" />
                </LinearLayout>

            </FrameLayout>


        </ViewFlipper>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/OpenLoginPageButton"
            style="@style/AppTheme.ColoredButton.Transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/login_connect" />

        <Space
            android:layout_width="10dp"
            android:layout_weight="0" />

        <Button
            android:id="@+id/LoginCreateAccountButton2"
            style="@style/AppTheme.ColoredButton.Transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/login_create_account" />
    </LinearLayout>

    </FrameLayout>
